{
  "manifest_version": 2,
  "name": "Pikabu Bookmarks",
  "version": "1.0",
  "description": "Расширение для pikabu.ru",
  "icons": {
    "48": "icons/icon.png"
  },

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "pikabu bookmarks",
    "default_popup": "popup/popup.html"
  },

  "applications": {
    "gecko": {
      "id": "mixasmix@mail.ru",
      "strict_min_version": "45.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.pikabu.ru/*"],
      "js": [
        "js/jQuery.js",
        "pikabu.js",
        "js/chart.js"
      ],
      "css": [
        "css/style.css",
        "bootstrap/css/bootstrap.grid.css"
      ]
    }
  ],
  "permissions": [
    "*://pikabu.monster/*",
    "webRequest"
  ]
}
